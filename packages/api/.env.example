# Tourist Safety Platform - API Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/tourist_safety"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Blockchain Configuration (Polygon Amoy Testnet)
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_PROVIDER_URL="https://rpc-amoy.polygon.technology"
BLOCKCHAIN_PRIVATE_KEY="your-private-key-here"
TOURIST_ID_CONTRACT_ADDRESS="0x..."

# External API Keys
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
SMS_PROVIDER_API_KEY="your-sms-provider-api-key"
SMS_PROVIDER_URL="https://api.sms-provider.com"
WEATHER_API_KEY="your-weather-api-key"
TRANSLATION_API_KEY="your-translation-api-key"

# Application Configuration
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:3001"
MOBILE_APP_URL="http://localhost:3002"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DEST="./uploads"

# Rate Limiting
RATE_LIMIT_TTL=60       # 1 minute
RATE_LIMIT_MAX=100      # 100 requests per minute

# Geofencing Configuration
DEFAULT_GEOFENCE_RADIUS=1000  # 1km

# Alert Configuration
ALERT_ESCALATION_TIME=300     # 5 minutes
MAX_ALERT_RADIUS=50000        # 50km

# Location Tracking Configuration
LOCATION_PING_INTERVAL=30     # 30 seconds
LOCATION_BATCH_SIZE=50

# Anomaly Detection Thresholds
HIGH_SPEED_THRESHOLD=100.0    # km/h
LOW_ACCURACY_THRESHOLD=100.0  # meters
INACTIVITY_THRESHOLD=3600     # 1 hour

# WebSocket Configuration
WS_CORS_ORIGIN="http://localhost:3001,http://localhost:3002"
WS_MAX_CONNECTIONS=1000

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Security Configuration
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=5

# Monitoring
HEALTH_CHECK_INTERVAL=60      # seconds
METRICS_ENABLED=true
