{
  "name": "sih2025",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=@sih2025/db",
    "db:push": "turbo run db:push --filter=@sih2025/db",
    "db:migrate": "turbo run db:migrate --filter=@sih2025/db",
    "db:seed": "turbo run db:seed --filter=@sih2025/db",
    "db:studio": "turbo run db:studio --filter=@sih2025/db",
    "api:dev": "turbo run dev --filter=@sih2025/api",
    "contracts:compile": "turbo run compile --filter=@sih2025/smart-contracts",
    "contracts:deploy": "cd packages/smart-contracts && bun run deploy",
    "setup": "bun install && bun run db:generate && bun run db:push && bun run db:seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
