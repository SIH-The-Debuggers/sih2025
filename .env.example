# Smart Tourist Safety Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# PostgreSQL with PostGIS extension
DATABASE_URL="postgresql://username:password@localhost:5432/tourist_safety"

# For development with Neon (recommended)
# DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/tourist_safety?sslmode=require"

# =====================================================
# AUTHENTICATION & SECURITY
# =====================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Encryption key for PII data (32 bytes)
ENCRYPTION_KEY="your-32-byte-encryption-key-here-change-this"

# =====================================================
# API CONFIGURATION
# =====================================================
PORT=3333
NODE_ENV="development"

# API URLs for frontend applications
NEXT_PUBLIC_API_URL="http://localhost:3333/api/v1"
NEXT_PUBLIC_WS_URL="ws://localhost:3333"

# =====================================================
# REDIS CONFIGURATION
# =====================================================
# For BullMQ job queues and caching
REDIS_URL="redis://localhost:6379"

# For development with Upstash (recommended)
# REDIS_URL="rediss://default:password@region.upstash.io:6380"

# =====================================================
# BLOCKCHAIN CONFIGURATION
# =====================================================
# Private key for smart contract deployment (without 0x prefix)
PRIVATE_KEY="your-wallet-private-key-here"

# Polygon Amoy testnet RPC
POLYGON_AMOY_RPC_URL="https://rpc-amoy.polygon.technology/"

# Optional: Alchemy/Infura for better reliability
# POLYGON_AMOY_RPC_URL="https://polygon-amoy.g.alchemy.com/v2/YOUR-API-KEY"

# Deployed contract addresses (fill after deployment)
TOURIST_ID_REGISTRY_ADDRESS=""

# =====================================================
# MAP SERVICES
# =====================================================
# Mapbox access token for maps
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.your-mapbox-token"

# Google Maps API key (optional, for geocoding)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# =====================================================
# NOTIFICATION SERVICES
# =====================================================
# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email Provider (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@tourist-safety.com"

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# WhatsApp Business API (optional)
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# =====================================================
# EXTERNAL SERVICES
# =====================================================
# Geocoding service
OPENCAGE_API_KEY="your-opencage-api-key"

# Weather service (for safety alerts)
OPENWEATHER_API_KEY="your-openweather-api-key"

# =====================================================
# MONITORING & LOGGING
# =====================================================
# Sentry for error tracking
SENTRY_DSN="your-sentry-dsn"

# Log level (debug, info, warn, error)
LOG_LEVEL="info"

# =====================================================
# FILE STORAGE
# =====================================================
# For case files, profile photos, etc.
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="tourist-safety-files"

# Or use Cloudinary for images
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
# Enable debug features
DEBUG_MODE="true"

# Skip SMS/Email sending in development
SKIP_NOTIFICATIONS="true"

# Mock blockchain transactions
MOCK_BLOCKCHAIN="true"

# =====================================================
# PRODUCTION SETTINGS (uncomment for production)
# =====================================================
# HTTPS_ENABLED="true"
# RATE_LIMIT_ENABLED="true"
# CORS_ORIGIN="https://tourist-safety.com,https://police.tourist-safety.com"
